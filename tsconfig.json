{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@controller/*": ["controller/*"],
      "@helpers/*": ["helpers/*"],
      "@models/*": ["models/*"],
      "@networks/*": ["networks/*"],
      "@store/*": ["store/*"]
    }
  },
  "exclude": ["node_modules"]
}
