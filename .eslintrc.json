{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["node_modules/", "dist/"],
  "include": ["src/**/*.js", "src/**/*.ts"]
}
