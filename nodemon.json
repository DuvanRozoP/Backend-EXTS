{
  "verbose": null,
  "restartable": "App se reiniciará al guardar cambios",
  "watch": ["./src"],
  "ext": "ts",
  "delay": "1000",
  "exec": "clear && ts-node ./src/server.ts",
  "events": {
    "start": "echo 🚀 Iniciando la aplicación! ✨",
    "restart": "echo 🤔 Reiniciando la aplicación! ⏳"
  }
}
